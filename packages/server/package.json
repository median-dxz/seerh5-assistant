{
  "name": "@sea/server",
  "private": true,
  "type": "module",
  "version": "0.11.2",
  "main": "./src/index.ts",
  "exports": {
    ".": {
      "types": "./src/client-types.ts"
    }
  },
  "scripts": {
    "start": "nodemon ./src/index.ts",
    "build": "esbuild ./src/index.ts --bundle --platform=node --target=node22.15.1 --outfile=./src/index.cjs --allow-overwrite --external:thread-stream",
    "executable": "pkg ./src/index.cjs -c package.json -o ./bin/server.exe",
    "watch:tsc": "tsc --watch",
    "lint": "eslint .",
    "test": "vitest"
  },
  "dependencies": {
    "@fastify/cors": "^11.0.1",
    "@fastify/env": "^5.0.2",
    "@fastify/formbody": "^8.0.2",
    "@fastify/middie": "^9.0.3",
    "@fastify/multipart": "^9.0.3",
    "@fastify/one-line-logger": "^2.0.2",
    "@fastify/static": "^8.2.0",
    "@fastify/websocket": "^11.2.0",
    "@sea/mod-resolver": "workspace:*",
    "@trpc/server": "11.4.3",
    "acorn": "^8.15.0",
    "acorn-walk": "^8.3.4",
    "astring": "^1.9.0",
    "close-with-grace": "^2.2.0",
    "fastify": "^5.4.0",
    "fastify-type-provider-zod": "^4.0.2",
    "http-proxy-middleware": "^3.0.5",
    "rotating-file-stream": "^3.2.6",
    "superjson": "^2.2.2",
    "thread-stream": "^3.1.0",
    "zod": "^3.25.51"
  },
  "devDependencies": {
    "@types/node": "^22.15.29",
    "@yao-pkg/pkg": "^6.6.0",
    "esbuild": "0.25.8",
    "form-data": "^4.0.4",
    "nodemon": "^3.1.10",
    "pino-pretty": "^13.0.0",
    "tsx": "^4.20.3"
  },
  "nodemonConfig": {
    "watch": [
      "./tsconfig.json",
      "./src/**/*",
      ".env"
    ],
    "ext": "ts,js",
    "execMap": {
      "ts": "tsx"
    }
  },
  "pkg": {
    "targets": [
      "node22-win-x64"
    ],
    "scripts": [
      "./node_modules/thread-stream/lib/worker.js"
    ]
  }
}
