{
  "name": "@sea/server",
  "private": true,
  "type": "module",
  "version": "0.10.1",
  "main": "./src/index.ts",
  "exports": {
    ".": {
      "types": "./src/client-types.ts"
    }
  },
  "scripts": {
    "start": "nodemon ./src/index.ts",
    "build": "esbuild ./src/index.ts --bundle --platform=node --target=node20.11.1 --outfile=./src/index.cjs --allow-overwrite --external:thread-stream",
    "executable": "pkg ./src/index.cjs -c package.json -o ./bin/server.exe",
    "watch:tsc": "tsc --watch",
    "lint": "eslint .",
    "test": "vitest"
  },
  "dependencies": {
    "@fastify/cors": "^10.0.2",
    "@fastify/env": "^5.0.2",
    "@fastify/middie": "^9.0.3",
    "@fastify/multipart": "^9.0.3",
    "@fastify/one-line-logger": "^2.0.2",
    "@fastify/static": "^8.0.4",
    "@fastify/websocket": "^11.0.2",
    "@sea/mod-resolver": "workspace:*",
    "@trpc/server": "11.0.0-rc.802",
    "close-with-grace": "^2.2.0",
    "fastify": "^5.2.1",
    "fastify-type-provider-zod": "^4.0.2",
    "http-proxy-middleware": "^3.0.3",
    "rotating-file-stream": "^3.2.5",
    "superjson": "^2.2.2",
    "thread-stream": "^3.1.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@swc/core": "^1.10.18",
    "@types/node": "^22.13.5",
    "@yao-pkg/pkg": "^6.3.1",
    "esbuild": "0.25.0",
    "form-data": "^4.0.2",
    "nodemon": "^3.1.9",
    "pino-pretty": "^13.0.0",
    "ts-node": "^10.9.2"
  },
  "nodemonConfig": {
    "watch": [
      "./tsconfig.json",
      "./src/**/*",
      ".env"
    ],
    "ext": "ts,js",
    "execMap": {
      "ts": "node --import=./typescript-hooks.mjs"
    }
  },
  "pkg": {
    "targets": [
      "node20-win-x64"
    ],
    "scripts": [
      "./node_modules/thread-stream/lib/worker.js"
    ]
  }
}
